<div class="header-top-block">
    <div class="left">
        <a href="<%- url_for_lang('') %>"><%- image_tag('images/mew-logo-white.png') %></a>
        <p><%= _p('help_center') %></p>
    </div>
    <div class="right">
        <ul>
            <% for (var i in theme.menu){ %>
                <li><a class="main-nav-link" href="<%- url_for_lang(theme.menu[i]) %>"><%= i %></a></li>
            <% } %>
            <li>
                <label id="lang-select-label" class="lang-nav-link"><i class="fa fa-globe"></i><span><%= lang_name(page.lang) %></span></label>
                <select id="lang-select" data-canonical="<%= canonical_path_for_nav() %>">
                    <option >Select Language</option>
                    <% for (let lang in site.data.languages){ %>
                    <option value="<%= lang %>"<% if (page.lang === lang){ %> selected<% } %>><%= lang_name(lang) %></option>
                    <% } %>
                </select>
            </li>
        </ul>
    </div>
</div>
