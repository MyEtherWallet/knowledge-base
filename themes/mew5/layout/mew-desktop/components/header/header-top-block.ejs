<div class="header-top-block">
    <div class="left">
        <a href="<%- url_for('') %>"><%- image_tag('images/mew-logo-white.png') %></a>
        <p><%= _p('help_center') %></p>
    </div>
    <div class="right">
        <ul>
            <% for (var i in theme.menu){ %>
                <li><a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
            <% } %>
            <li>
                <select id="header-lang-select" class="header-lang-select">
                    <% if (is_home()) { %>
                        <option disabled selected value class="hidden">Choose a language</option>
                        <% get_langs().forEach(lang => { %>
                            <option value="<%= lang %>"
                                    data-href="<%= switch_lang(lang) %>"><%= site.data.languages[lang] %></option>
                        <% }) %>
                    <% } else { %>
                        <% get_langs().forEach(lang => { %>
                            <option
                                    value="<%= lang %>"
                                    <%= lang === page.lang ? 'selected' : '' %>
                                    data-href="<%= switch_lang(lang) %>"
                            >
                                <%= site.data.languages[lang] %>
                            </option>
                        <% }) %>
                    <% } %>
                </select>
            </li>
        </ul>
    </div>
</div>
