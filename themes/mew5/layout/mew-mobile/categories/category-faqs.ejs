<div class="content-body">
  <%- partial(theme.theme_mobile + '/components/selector-major-categories', {category: 'faqs'}) %>

  <div class="mew___categories_cat-faqs page-container">
    <div class="wrap">
      <%site.categories.findOne({name: 'faqs'}).posts.filter(function(post){return post.lang == page.lang;}).sort('date', 1).each(function(post, index) {%>
        <div class="accordion">
          <div class="accordion-header">
            <div class="post-title"><%= post.title %></div>
            <div class="post-button"></div>
          </div>
          <div class="mew___md___content-style accordion-content">
            <div class="padding-block wrap-post-body"><%- post.content %></div>
          </div>
        </div>
      <% })%>
    </div>
    <%- partial(theme.theme_mobile + '/components/bottom-helpers') %>
  </div>
</div>
