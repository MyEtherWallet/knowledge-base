<div class="header-top-block">
  <div class="relative lang-select-container">
    <div class="flag no-line-height" id="lang-select-label" for="lang-select" class="lang-nav-link"><%- image_tag('images/flags/' + page.lang + '.svg', {width: 40, height: 20, alt: ''}) %></div>
    <div class="lang-select-box hidden">
        <span class="arrow-up"></span>
        <div>
            <% for (let lang in active_languages()){ %>
            <div class="lang-select <% if (page.lang === lang){ %> selected<% } %>" data-lang="<%= lang %>" data-current-lang="<%= page.lang %>" data-path="<%= page.path %>"><%= lang_name(lang) %></div>
          <% } %>
        </div>
    </div>
  </div>

  <div class="left">
    <a href="<%- url_for_lang('') %>"><%- image_tag('images/mew-logo-dark.png', {alt: ''}) %></a>
  </div>
  <div class="menu">
    <p><%= _p('help_center') %></p>
  </div>
  <div class="right hidden">
    <ul>
      <% for (var i in theme.menu){ %>
        <li><a class="main-nav-link" href="<%- url_for_lang(theme.menu[i]) %>"><%= _p(i) %></a></li>
      <% } %>
        <li>
          <label id="lang-select-label" for="lang-select" class="lang-nav-link"><%- image_tag('images/flags/' + page.lang + '.svg', {width: 40, height: 20, alt: ''}) %></label>
          <select id="lang-select" class="hidden" data-canonical="<%= canonical_path_for_nav() %>">
            <% for (let lang in site.data.languages){ %>
              <option value="<%= lang %>"<% if (page.lang === lang){ %> selected<% } %>><%= lang_name(lang) %></option>
            <% } %>
          </select>
        </li>
    </ul>
  </div>
</div>
