//=========================================================================
// .mew___components_major-categories
//=========================================================================
.mew___components_major-categories
  user-select: none
  height: 90px

  >ul
    display: flex
    align-items: center
    >li
      font-size: 30px
      font-weight: 400
      padding: 0
      margin-right: 50px
      span
        cursor: pointer
        color: mew-color-light-grey-1
        line-height: initial
        padding-bottom: 7px
      &.active
        font-weight: 600
        span
          border-bottom: 2px solid mew-color-black
          color: mew-color-text-1



//=========================================================================
// .mew___categories_cat-faqs
//=========================================================================
.mew___categories_cat-faqs
  .accordion
    border-top: 1px solid mew-color-background-1
    padding: 0 10px

    .accordion-header
      position: relative
      user-select: none
      cursor: pointer

      .post-title
        font-size: 18px
        font-weight: 600
        padding: 25px 0

      .post-button
        &::before,
        &::after
          position: absolute
          right: 0
          top: 0
          bottom: 0
          margin: auto 0
          content: ''
          height: 4px
          width: 20px
          background-color: mew-color-text-1

        &::after
          transform: rotate(90deg)
          transition: all 0.7s ease

    .accordion-content
      overflow: hidden
      max-height: 0
      transition: all 0.4s ease

      h2
        display: none

      .padding-block
        padding-bottom: 30px

    &.open
      .accordion-content
        max-height: 2000px

      .accordion-header
        .post-button::after
          transform: rotate(720deg)




