
//=========================================================================
// body
//=========================================================================
p, span, h1, h2, h3, h4, h5, h6, div
  color: mew-color-text-1
  line-height: initial

p
  font-size: 14px

h3
  font-size: 22px
  font-weight: 600

body
  font-family: 'Montserrat', sans-serif


a:link,
a:visited,
a:hover,
a:active
  text-decoration: none


.site-wrap
  background-color: white
  min-height: 100vh

.content-body
  padding: 60px 0 60px 0

.page-container
  max-width: 1200px
  margin: 0 auto


textarea:focus, input:focus
  outline: none

.hidden
  display: none


