//=========================================================================
// .mew___categories_cat-videos
//=========================================================================
.mew___categories_cat-videos
  padding-top: 30px
  .youtube-container
    display: grid
    grid-template-columns: 240px 1fr
    .sidebar
      font-size: 22px
      font-weight: 600

    ul
      display: grid
      grid-gap: 60px 30px
      grid-template-columns: 1fr 1fr 1fr
      li
        &:hover
          .video-thumbnail img
            box-shadow: 0px 0px 50px mew-color-box-shadow-1

        .video-button
          cursor: pointer

        .video-thumbnail
          img
            width: 100%

        .video-info
          margin-top: 10px;

  .video-popup
    .video-iframe
      display: none;      
      position: fixed
      left: 0
      top: 0
      width: 100vw
      height: 100vh
      background-color: mew-color-transparent-background-1
      transition: opacity 0.5s ease

      &::after
        padding: 20px
        //background-color: mew-color-transparent-background-2
        //border-radius: 50px
        content: 'X Close'
        color: white
        font-weight: 700
        font-size: 30px
        position: fixed
        top: 30px
        right: 50px
        cursor: pointer


    .video-iframe iframe
      background-color: black
      background-image: url('images/youtube.svg')
      background-size: 200px
      background-position: center
      background-repeat: no-repeat
      position: fixed
      top: 0
      bottom: 0
      left: 0
      right: 0
      margin: auto auto
      box-shadow: 0 10px 40px mew-color-box-shadow-1

  .open .video-popup
    .video-iframe
      display: block
  


