  //=========================================================================
  .mew___categories_cat-faqs
    .accordion
      border-top: 1px solid mew-color-background-1
      padding: 0 10px

      &:last-child
        border-bottom: 1px solid mew-color-background-1

      .accordion-header
        position: relative
        user-select: none
        cursor: pointer
        padding-right: 30px

        .post-title
          font-size: 18px
          font-weight: 600
          padding: 25px 0

        .post-button
          &::before,
          &::after
            position: absolute
            right: 0
            top: 0
            bottom: 0
            margin: auto 0
            content: ''
            height: 4px
            width: 20px
            background-color: mew-color-text-1

          &::after
            transform: rotate(90deg)
            transition: all 0.7s ease

      .accordion-content
        overflow: hidden
        max-height: 0
        transition: all 0.4s ease
        background-color: mew-color-light-grey-12
        border-radius: 5px

        h1, h6, hr
          display: none

        .padding-block
          padding: 10px

      &.open
        .accordion-content
          max-height: 700px
          overflow-y: auto
          margin-bottom: 20px

        .accordion-header
          .post-button::after
            transform: rotate(720deg)




