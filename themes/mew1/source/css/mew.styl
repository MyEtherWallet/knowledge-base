body
  font-family: 'Montserrat', sans-serif

.mew___major-categories
  padding-top: 70px
  ul
    display: flex
    align-items: center
    li
      font-size: 30px
      font-weight: 400
      padding: 0
      margin-right: 50px
      span
        cursor: pointer
        color: mew-color-light-grey-1
        line-height: initial
        padding-bottom: 7px
      &.active
        font-weight: 600
        span
          border-bottom: 2px solid mew-color-black
          color: mew-color-text-1



