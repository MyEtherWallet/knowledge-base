//=========================================================================
// .mew___major-categories
//=========================================================================
.mew___major-categories
  user-select: none
  height: 90px

  >ul
    display: flex
    align-items: center
    >li
      font-size: 30px
      font-weight: 400
      padding: 0
      margin-right: 50px
      span
        cursor: pointer
        color: mew-color-light-grey-1
        line-height: initial
        padding-bottom: 7px
      &.active
        font-weight: 600
        span
          border-bottom: 2px solid mew-color-black
          color: mew-color-text-1



//=========================================================================
// .mew___categories_cat-faqs
//=========================================================================
.mew___categories_cat-faqs
  .wrap
    border-top: 1px solid mew-color-background-1
    padding: 0 10px

    .accordion-header
      position: relative
      user-select: none
      cursor: pointer

      .post-title
        font-size: 18px
        font-weight: 600
        padding: 25px 0

      .post-button
        &::before,
        &::after
          position: absolute
          right: 0
          top: 0
          bottom: 0
          margin: auto 0
          content: ''
          height: 4px
          width: 20px
          background-color: mew-color-text-1

        &::after
          transform: rotate(90deg)
          transition: all 0.7s ease

    .accordion-content
      overflow: hidden
      max-height: 0
      transition: all 0.4s ease

      h2
        display: none

      .padding-block
        padding-bottom: 30px

  >*.open
    .accordion-content
      max-height: 2000px

    .accordion-header
      .post-button::after
        transform: rotate(720deg)




//=========================================================================
// .mew___categories_cat-categories
//=========================================================================
.mew___categories_cat-categories
  padding-top: 20px

  .category-container
    .cat-group
      margin-bottom: 60px

      ul
        padding-top: 20px
        display: grid
        grid-gap: 15px
        grid-template-columns: 1fr 1fr 1fr
        width: 100%
        li
          user-slect: none
          cursor: pointer
          background-color: mew-color-background-2
          padding: 15px
          display: flex
          align-items: center

          p
            font-size: 20px
            font-weight: 400


//=========================================================================
// .mew___categories_cat-videos
//=========================================================================
.mew___categories_cat-videos
  padding-top: 30px
  .youtube-container
    display: grid
    grid-template-columns: 240px 1fr
    .sidebar
      font-size: 22px
      font-weight: 600

    ul
      display: grid
      grid-gap: 60px 30px
      grid-template-columns: 1fr 1fr 1fr
      li
        &:hover
          .video-thumbnail img
            box-shadow: 0px 0px 50px mew-color-box-shadow-1

        .video-button
          cursor: pointer

        .video-thumbnail
          img
            width: 100%

        .video-info
          margin-top: 10px;

  .video-popup
    .video-iframe
      display: none;      
      position: fixed
      left: 0
      top: 0
      width: 100vw
      height: 100vh
      background-color: mew-color-transparent-background-1
      transition: opacity 0.5s ease

      &::after
        padding: 20px
        background-color: mew-color-transparent-background-2
        border-radius: 50px
        content: 'âœ— Close'
        color: white
        font-weight: 700
        font-size: 20px
        position: fixed
        top: 30px
        right: 50px
        cursor: pointer


    .video-iframe iframe
      background-color: mew-color-transparent-background-3
      background-image: url('images/youtube.svg')
      background-size: 200px
      background-position: center
      background-repeat: no-repeat
      position: fixed
      top: 0
      bottom: 0
      left: 0
      right: 0
      margin: auto auto
      box-shadow: 0 10px 40px mew-color-box-shadow-1

  .open .video-popup
    .video-iframe
      display: block
  


